# backend/.env.example
# AI 활용법 학습 튜터 백엔드 환경변수 템플릿
# 실제 사용 시 .env 파일을 생성하고 실제 값으로 변경하세요

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4

# 데이터베이스 연결 풀 설정
DB_MAX_CONNECTIONS=10
DB_CONNECT_TIMEOUT=10
DB_READ_TIMEOUT=10
DB_WRITE_TIMEOUT=10

# JWT 토큰 설정
JWT_SECRET_KEY=your-very-long-and-secure-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1시간 (초 단위)
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30일 (초 단위)

# Flask 애플리케이션 설정
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-different-flask-secret-key-for-sessions-and-csrf

# 서버 설정
HOST=127.0.0.1
PORT=5000

# CORS 설정
CORS_ORIGINS=http://localhost:5173

# 로깅 설정
LOG_LEVEL=INFO