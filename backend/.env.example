# backend/.env.example
# AI 활용법 학습 튜터 백엔드 환경변수 템플릿

# 데이터베이스 연결 URL
# MySQL 형식: mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ai_skill_tutor

# Flask 애플리케이션 시크릿 키 (JWT 토큰 생성 등에 사용)
SECRET_KEY=your-secret-key-here

# Flask 실행 환경 (development, production)
FLASK_ENV=development

# Flask 디버그 모드 (True/False)
FLASK_DEBUG=True

# 애플리케이션 포트
PORT=5000

# CORS 허용 도메인 (프론트엔드 URL)
CORS_ORIGINS=http://localhost:5173