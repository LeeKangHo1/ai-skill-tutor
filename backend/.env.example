# backend/.env.example
# AI 활용법 학습 튜터 백엔드 환경변수 템플릿
# 실제 사용 시 .env 파일을 생성하고 실제 값으로 변경하세요

# 데이터베이스 기본 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4

# 데이터베이스 연결 타임아웃 설정
DB_CONNECT_TIMEOUT=10
DB_READ_TIMEOUT=10
DB_WRITE_TIMEOUT=10

# v2.0 연결 풀 설정 (환경별 자동 조정)
DB_MIN_CONNECTIONS=2
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_TIME=600
DB_HEALTH_CHECK_INTERVAL=120
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1.0

# v2.0 헬스체크 설정
DB_ENABLE_HEALTH_CHECK=true
DB_HEALTH_CHECK_QUERY=SELECT 1

# v2.0 자동 재연결 설정
DB_ENABLE_AUTO_RECONNECT=true
DB_MAX_RECONNECT_ATTEMPTS=3
DB_RECONNECT_DELAY=1.0

# v2.0 SSL 설정 (운영 환경용)
DB_SSL_DISABLED=false
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# JWT 토큰 설정
JWT_SECRET_KEY=your-very-long-and-secure-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1시간 (초 단위)
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30일 (초 단위)

# Flask 애플리케이션 설정
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-different-flask-secret-key-for-sessions-and-csrf

# 서버 설정
HOST=127.0.0.1
PORT=5000

# CORS 설정
CORS_ORIGINS=http://localhost:5173

# 로깅 설정
LOG_LEVEL=INFO

# AI API 설정 (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash  # 개발용
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# AI API 설정 (OpenAI - 임베딩용)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# 벡터 데이터베이스 설정 (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=ai_tutor_knowledge

# 외부 API 설정
WEB_SEARCH_API_KEY=your_web_search_api_key_here  # 선택사항
WEB_SEARCH_ENGINE_ID=your_search_engine_id_here  # 선택사항

# LangSmith 설정 (추적 및 모니터링)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=ai-skill-tutor
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com